@{
    ViewData["Title"] = "Players";
}

<div class="container m-2 mx-auto">
    <div class="d-flex m-2 justify-content-between align-items-center">
        <div>
            <h2>Players listed with us</h2>
        </div>
        <div>
            <a class="btn btn-info" asp-controller="Players" asp-action="Create">Add a player</a>
        </div>
    </div>

    <div>
        @for (int i = 1; i < 10; i++)
        {
            <div class="card mb-3 mx-auto" style="max-width: 540px;">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="https://via.placeholder.com/300" class="card-img" alt="player-img">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">Player @i</h5>
                            <p class="card-text">Description: Player @i  is a great player. A one liner description of the player, salary info, club, number and position.</p>
                            <p class="card-text"><small class="text-muted">Past Club: The Best Soccer Club</small></p>
                            <p>
                                <a href="#">Reassign Player</a> |
                                <a href="#">Deassign Player</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
