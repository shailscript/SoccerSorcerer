@{
    ViewData["Title"] = "Clubs";
}

<div class="container m-2 mx-auto">
    <div class="d-flex m-2 justify-content-between align-items-center">
        <div>
            <h2>Clubs listed with us</h2>
        </div>
        <div>
            <a class="btn btn-info" asp-controller="Clubs" asp-action="Create">Add a club</a>
        </div>
    </div>

    <div class="d-flex flex-wrap justify-content-around mx-n4">
        @for (int i = 1; i < 10; i++)
        {
            <div class="card m-2 mb-4" style="width: 20rem;">
                <img src="https://via.placeholder.com/200" class="card-img-top" alt="Placeholder image">
                <div class="card-body">
                    <h5 class="card-title">Soccer Club @i</h5>
                    <p class="card-text">We don't play sport, we breathe sport. A few more lines of club description.</p>
                    <a class="btn btn-primary text-white" asp-controller="Clubs" asp-action="Show">View details</a>
                </div>
            </div>
        }
    </div>
</div>
